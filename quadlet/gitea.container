[Unit]
Description=Gitea Git Service
After=network-online.target
Wants=network-online.target

[Container]
Image=docker.io/gitea/gitea:1.25
ContainerName=gitea

PublishPort=3000:3000
PublishPort=2222:22

Volume=/var/lib/dev-platform/gitea:/data

[Service]
Restart=always

[Install]
WantedBy=multi-user.target
